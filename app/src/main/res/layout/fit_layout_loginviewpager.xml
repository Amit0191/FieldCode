<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vpLoginHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/fit_continue_with_facebook"
        android:textAppearance="@style/fit_FontStyleBold"
        android:textColor="@color/fit_colorTextPrimary"
        android:textSize="@dimen/fit_font_size_xxxlarge2" />

    <TextView
        android:id="@+id/vpLoginTagLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vpLoginHeading"
        android:layout_marginStart="@dimen/fit_spacing_xxxlarge"
        android:layout_marginEnd="@dimen/fit_spacing_xxxlarge"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/fit_spacing_control_half"
        android:text="@string/fit_personalizes_workouts_and_plans_for_any_fitness_and_goal_level"
        android:textAlignment="center"
        android:textColor="@color/fit_colorTextSecondary" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vpLoginTagLine"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/fit_spacing_xxxlarge"
        android:layout_marginEnd="@dimen/fit_spacing_xxxlarge"
        android:layout_marginTop="@dimen/fit_spacing_45">

        <ImageView
            android:id="@+id/vpLoginImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/fit_slide5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/vpLoginTagLine"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/fit_spacing_45"
            android:background="@drawable/fit_gradient" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>