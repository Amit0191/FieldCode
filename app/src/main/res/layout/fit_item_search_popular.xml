<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/itemcardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fit_bg_shadow">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/searchItemImage"
            android:layout_width="@dimen/fit_spacing_100"
            android:layout_height="@dimen/fit_spacing_100"
            android:background="@drawable/fit_roundborder"
            android:scaleType="fitXY"
            android:src="@drawable/fit_athlete3" />

    </RelativeLayout>

    <TextView
        android:id="@+id/searchItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemcardView"
        android:layout_marginStart="@dimen/fit_spacing_standard"
        android:layout_marginTop="@dimen/fit_spacing_standard"
        android:text="@string/fit_legs_and_abs"
        android:textAppearance="@style/fit_FontStyleMedium"
        android:textSize="@dimen/fit_font_size_medium" />

    <androidx.appcompat.widget.AppCompatRatingBar
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchItemName"
        android:layout_marginStart="@dimen/fit_spacing_standard"
        android:layout_marginTop="@dimen/fit_spacing_control"
        android:rating="3"
        android:theme="@style/fit_RatingBar" />

</RelativeLayout>