<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fit_colorPureWhite"
    android:orientation="horizontal"
    tools:context=".fitActivity.FitEnterPasswordActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgMasterBack"
            style="@style/fit_back_button" />

        <TextView
            android:text="@string/fit_enter_password"
            style="@style/fit_title_text" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:layout_marginTop="@dimen/fit_spacing_60"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt1"
            android:layout_width="@dimen/fit_spacing_xxlarge"
            android:layout_height="@dimen/fit_spacing_45"
            android:backgroundTint="@color/fit_colorPrimaryDark"
            android:gravity="center"
            android:inputType="numberPassword"
            android:nextFocusRight="@id/edt2">

        </androidx.appcompat.widget.AppCompatEditText>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt2"
            android:layout_width="@dimen/fit_spacing_xxlarge"
            android:layout_height="@dimen/fit_spacing_45"
            android:backgroundTint="@color/fit_colorPrimaryDark"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt3"
            android:layout_width="@dimen/fit_spacing_xxlarge"
            android:layout_height="@dimen/fit_spacing_45"
            android:backgroundTint="@color/fit_colorPrimaryDark"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt4"
            android:layout_width="@dimen/fit_spacing_xxlarge"
            android:layout_height="@dimen/fit_spacing_45"
            android:backgroundTint="@color/fit_colorPrimaryDark"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1" />

    </LinearLayout>

</RelativeLayout>