<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/itemcardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fit_bg_shadow">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tItemImage"
            android:layout_width="@dimen/fit_spacing_180"
            android:layout_height="@dimen/fit_spacing_110"
            android:background="@drawable/fit_roundborder"
            android:scaleType="centerCrop"
            android:src="@drawable/fit_athlete3" />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tItemButton"
        android:layout_width="@dimen/fit_spacing_60"
        android:layout_height="@dimen/fit_spacing_30"
        android:layout_alignBottom="@id/itemcardView"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/fit_spacing_10"
        android:backgroundTint="@color/fit_colorPureWhite"
        android:text="@string/fit_new"
        android:textAllCaps="false"
        android:textColor="@color/fit_colorTextPrimary"
        app:cornerRadius="@dimen/fit_spacing_standard_new1" />

    <TextView
        android:id="@+id/tItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemcardView"
        android:layout_marginStart="@dimen/fit_spacing_standard"
        android:text="@string/fit_legs_and_abs"
        android:textAppearance="@style/fit_FontStyleMedium"
        android:textSize="@dimen/fit_font_size_small" />

    <TextView
        android:id="@+id/tItemSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tItemTitle"
        android:layout_marginStart="@dimen/fit_spacing_standard"
        android:layout_marginTop="@dimen/fit_spacing_control"
        android:text="@string/fit_gym_training"
        android:textSize="@dimen/fit_font_size_small"
        android:textColor="@color/fit_colorTextSecondary" />

</RelativeLayout>