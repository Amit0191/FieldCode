<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/fit_colorPureWhite" />
            <size android:width="@dimen/fit_spacing_22" android:height="@dimen/fit_spacing_22" />
            <stroke android:width="@dimen/fit_spacing_control_half" android:color="@color/fit_colorGrey" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/fit_colorPureWhite" />
            <size android:width="@dimen/fit_spacing_22" android:height="@dimen/fit_spacing_22" />
            <stroke android:width="@dimen/fit_spacing_control_half" android:color="@color/fit_colorPrimaryDark" />
        </shape>
    </item>

</selector>