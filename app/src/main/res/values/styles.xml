<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="FitAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fit_colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/fit_colorPrimaryDark</item>
        <item name="colorAccent">@color/fit_colorAccent</item>
    </style>


<!--    <style name="Fit_statusBarLight" parent="Theme.MaterialComponents.Light.NoActionBar">-->
<!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
<!--    </style>-->

    <style name="fit_FontStyleBold">
        <item name="fontPath">@string/fit_font_bold</item>
    </style>

    <style name="fit_FontStyleMedium">
        <item name="fontPath">@string/fit_font_medium</item>
    </style>

    <style name="fit_FontStyleRegular">
        <item name="fontPath">@string/fit_font_regular</item>
    </style>

    <style name="fit_ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/fit_spacing_10</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/fit_colorPureWhite</item>
        <item name="cornerRadius">@dimen/fit_spacing_standard_new1</item>
    </style>

    <style name="fit_EditTextStyle">
        <item name="android:backgroundTint">@color/fit_colorBottomEditTextLine</item>
        <item name="lastBaselineToBottomHeight">@dimen/fit_spacing_22</item>
        <item name="android:drawablePadding">@dimen/fit_spacing_standard_1</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fit_TextInputLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/fit_font_size_medium</item>
    </style>

    <style name="FitLine">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/fit_colorBottomEditTextLine</item>
        <item name="android:layout_marginStart">@dimen/fit_spacing_standard_1</item>
        <item name="android:layout_marginEnd">@dimen/fit_spacing_standard_1</item>
    </style>

    <style name="fit_MenuTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/fit_spacing_10</item>
        <item name="android:padding">@dimen/fit_spacing_standard_1</item>
        <item name="android:textColor">@color/fit_colorTextPrimary</item>
    </style>

    <style name="fit_RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/fit_colorTextSecondary</item>
        <item name="colorControlActivated">@color/fit_colorPrimaryDark</item>
    </style>

    <style name="fit_TabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
     <style name="fit_back_button">
         <item name="android:layout_width">@dimen/_30sdp</item>
         <item name="android:layout_height">@dimen/_30sdp</item>
         <item name="android:layout_centerVertical">true</item>
         <item name="android:layout_marginStart">@dimen/fit_spacing_control</item>
         <item name="android:src">@drawable/fit_ic_keyboard_arrow_left_black_24dp</item>
     </style>
    <style name="fit_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="fontPath">@string/fit_font_bold</item>
        <item name="android:textColor">@color/fit_colorTextPrimary</item>
        <item name="android:textSize">@dimen/fit_font_size_normal</item>
    </style>
    <style name="fit_heading_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">@string/fit_font_bold</item>
        <item name="android:textColor">@color/fit_colorTextPrimary</item>
        <item name="android:textSize">@dimen/fit_font_size_normal</item>
    </style>
</resources>
